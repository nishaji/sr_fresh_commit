<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/export_pdf_tool"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/style_color_accent"
        />
<TextView
    android:gravity="center"
    android:textSize="20sp"
    android:layout_below="@+id/export_pdf_tool"
    android:text="Choose Template"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_below="@+id/export_pdf_tool"
        android:layout_marginTop="30dp"
        android:id="@+id/lay"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_marginStart="25dp"
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/blue"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/orange"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lay1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_marginStart="25dp"
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/green"
            android:layout_marginLeft="25dp" />

        <ImageView
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/pink"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <info.hoang8f.widget.FButton
        android:layout_marginTop="20dp"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="@dimen/demo_button_min_height"
        android:minWidth="@dimen/demo_button_min_width"
        android:text=" Export Pdf"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/style_color_accent"
        fbutton:shadowEnabled="true" />

    <info.hoang8f.widget.FButton
        android:visibility="gone"
        android:layout_toEndOf="@+id/button1"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="@dimen/demo_button_min_height"
        android:minWidth="@dimen/demo_button_min_width"
        android:text=" View Pdf"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/style_color_accent"
        fbutton:shadowEnabled="true"
        android:layout_toRightOf="@+id/button1" />
        </RelativeLayout>

</RelativeLayout>