<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#fff">

        <ScrollView android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardUseCompatPadding="true"
                  >
                    <TextView
                        android:layout_height="22dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:background="@color/style_color_accent"
                        android:layout_gravity="top"
                        android:textStyle="bold"
                        android:text="Education"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:ellipsize="none"
                        android:layout_width="match_parent"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="26dp"
                        android:id="@+id/education_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview4"
                    android:layout_marginTop="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                   >
                    <TextView
                        android:layout_gravity="top"
                        android:textStyle="bold"
                        android:text="Experience"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_height="22dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:background="@color/style_color_accent"
                        android:layout_width="match_parent" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="25dp"
                        android:id="@+id/experience_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview5"
                    android:layout_marginTop="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:text="Award"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_height="22dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:background="@color/style_color_accent"
                        android:layout_width="match_parent"
                         />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="25dp"
                        android:id="@+id/award_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card6"
                    android:layout_marginTop="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                   >
                    <TextView
                        android:textStyle="bold"
                        android:text="Contact"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_height="22dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:background="@color/style_color_accent"
                        android:layout_width="match_parent"
                         />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="25dp"
                        android:id="@+id/contact_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card7"
                    android:layout_marginTop="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                   >
                    <TextView
                        android:layout_gravity="top"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:text="Certificate"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:layout_marginBottom="15dp"
                        android:layout_height="22dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:background="@color/style_color_accent"                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="25dp"
                        android:id="@+id/certificate_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>