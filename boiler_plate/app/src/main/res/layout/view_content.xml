<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#EEEEEE">
<RelativeLayout
    android:id="@+id/card_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/empty_text"
    android:visibility="gone"
    android:textSize="25sp"
    android:gravity="center"
    android:text="No any profile data added click + button to add"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:id="@+id/book_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/header_when"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageButton
                android:onClick="edit_book"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@mipmap/newedit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/strength_card"
        android:layout_below="@+id/book_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageButton
                android:onClick="edit_strength"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@mipmap/newedit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/passion_card"
        android:layout_below="@+id/strength_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageButton
                android:onClick="edit_passion"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@mipmap/newedit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/skills_card"
        android:layout_below="@+id/passion_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageButton
                android:onClick="edit_skill"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@mipmap/newedit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/language_card"
        android:layout_below="@+id/skills_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageButton
                android:onClick="edit_language"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@mipmap/newedit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/routine_card"
        android:layout_below="@+id/language_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#fff"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageButton
                android:onClick="edit_routine"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@mipmap/newedit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

</android.support.v4.widget.NestedScrollView>