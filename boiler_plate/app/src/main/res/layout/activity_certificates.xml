<RelativeLayout
    android:background="#fff"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarStyle="outsideOverlay"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/add_certificate_tool"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/style_color_accent"
        android:elevation="4dp">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="55dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/certificate_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Certificate Name"
            app:met_floatingLabel="normal"
            app:met_textColor="#000"
            app:met_floatingLabelTextColor="#000"
            android:maxLines="1"
            app:met_textColorHint="#9E9E9E"
            android:inputType="textCapWords"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/certificate_type"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="Certificate Type"
                app:met_floatingLabel="normal"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/rank"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:hint="Rank"
                app:met_floatingLabel="normal"
                app:met_textColor="#000"
                app:met_floatingLabelTextColor="#000"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                app:met_textColorHint="#9E9E9E"
                android:inputType="number"/>

        </LinearLayout>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/authority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Authority"
            app:met_floatingLabel="normal"
            app:met_textColor="#000"
            app:met_floatingLabelTextColor="#000"
            android:maxLines="1"
            app:met_textColorHint="#9E9E9E"
            android:inputType="textCapWords" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/certificate_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status"
            app:met_floatingLabel="normal"
            app:met_textColor="#000"
            app:met_floatingLabelTextColor="#000"
            android:maxLines="1"
            app:met_textColorHint="#9E9E9E"
            android:inputType="textCapWords"/>

        <LinearLayout
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <ImageView
                android:id="@+id/certificate_duration"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/cal"/>
            <TextView
                android:gravity="center"
                android:id="@+id/certificate_duration_text"
                android:saveEnabled="false"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Certification Date"
                android:textSize="17sp"/>
        </LinearLayout>
        <info.hoang8f.widget.FButton
            android:layout_gravity="center"
            android:id="@+id/add_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="@dimen/demo_button_min_height"
            android:minWidth="@dimen/demo_button_min_width"
            android:text="Add Certificate"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/style_color_accent"
            fbutton:shadowEnabled="true" />
    </LinearLayout>

</RelativeLayout>