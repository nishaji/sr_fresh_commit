<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/exp_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#fff"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="2dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/yellow"
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/header_when"
            />
        <RelativeLayout
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/title"
                android:text="Work Experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title"
                android:text="Company Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/school"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_company_name"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/school"
                android:text="Any Car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_company_name"
                android:text="Company title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titlee"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_company_title"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/titlee"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <ImageButton
                android:background="#fff"
                android:id="@+id/delete_exp"
                android:layout_toStartOf="@+id/edit_exp"
                android:layout_below="@+id/responsibility"
                android:src="@mipmap/newdelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toLeftOf="@+id/edit_exp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_company_title"
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/responsibility"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_location"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/responsibility"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <ImageButton
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:id="@+id/edit_exp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/responsibility"
                android:src="@mipmap/newedit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mongoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>




