<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/skill_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#fff"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        android:padding="2dp"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding= "5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#263238"
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/header_when"
            />
        <RelativeLayout
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/title"
                android:text="Skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title"
                android:text="Skill Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/school"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/skii_title"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/school"
                android:text="Any Car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/skii_title"
                android:text="Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skii_description"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/certstatus"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/skii_description"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <ImageButton
                android:id="@+id/skiidelete"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/skiiedit"
                android:layout_below="@+id/skii_description"
                android:src="@drawable/met_ic_clear"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />


            <ImageButton
                android:id="@+id/skiiedit"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/skii_description"
                android:src="@drawable/met_ic_clear"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />
            <TextView
                android:id="@+id/projid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>




