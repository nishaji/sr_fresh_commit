<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/exp_card"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/style_color_accent"
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/header_when"
            />
        <RelativeLayout
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/title"
                android:text="Work Experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title"
                android:text="Company Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/school"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_company_name"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/school"
                android:text="Any Car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_company_name"
                android:text="Company title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titlee"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_company_title"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/titlee"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_company_title"
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/responsibility"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_location"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/responsibility"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_exp_location"
                android:text="Experience Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_type"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/type"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_exp_type"
                android:text="From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/from"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_from"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/from"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_exp_from"
                android:text="Upto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upto"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_upto"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/upto"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_exp_upto"
                android:text="JOb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/job"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_job"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/job"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view_exp_job"
                android:text="Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:layout_gravity="center_vertical"
                android:textColor="#616161"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/view_exp_status"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/status"
                android:text="Developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="15sp"
                android:textStyle="normal"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>




