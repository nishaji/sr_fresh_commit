<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/addawardtool"
            android:background="#FFAB00"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/ToolBarStyle"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextAppearance="@style/ToolbarTitle"
            android:minHeight="56dp"
            android:elevation="2dp"/>
        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="#FFC400" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/circle"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:paddingBottom="14dp">
            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Nisha Singh"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Jaipur"
                android:textColor="#000"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/layone"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/user_profile_photo3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackbell" />
            <ImageButton
                android:layout_marginLeft="30dp"
                android:id="@+id/user_profile_photo1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackbell"
                android:background="@drawable/circle"
                />
            <ImageButton
                android:layout_marginLeft="30dp"
                android:id="@+id/user_profile_photo2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackbell" />
        </LinearLayout>
        <LinearLayout

            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="115dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/user_profile_photo33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackbell" />
            <ImageButton
                android:layout_marginLeft="30dp"
                android:id="@+id/user_profile_photo13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackbell"
                android:background="@drawable/circle"
                />
            <ImageButton
                android:layout_marginLeft="30dp"
                android:id="@+id/user_profile_photo23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackbell" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>